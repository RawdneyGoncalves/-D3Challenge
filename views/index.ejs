<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    body {
      background-image: url("https://exame.com/wp-content/uploads/2021/11/coronavirus-2.jpg");
      background-repeat: no-repeat;
      background-size: cover;
      display: flex;
      height: 100vh;
      flex-direction: column;
      Justify-content: center;
      align-items: center;
    }

    form {
      text-align: center;
      width: 40%;
      min-width: 320px;
      max-width: 600px;
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(10px);
      border-radius: 18px;
      padding: 32px;
    }

    form h1 {
      font-size: 48px;
      color: #fff;
    }

    .inputnumber {
      width: 50%;
      font-size: 32PX;
      height: 38px;
      border-radius: 5px;
      border: 1px solid orange;
    }

    .inputnumber:focus {
      outline: none;
      border: 2px solid darkorange;
    }

    .send {

      width: 80px;
      height: 42px;
      padding: 10px;

      background: #bd46a9;
      color: white;

      outline: none;
      border: none;
      border-radius: 5px;
      font-weight: bold;

      font-size: 24px;

      transition: 1s all;
      cursor: pointer;
    }

    .resultText {
      color: #fff;
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(10px);
      padding: 20px;
      border-radius: 18px;
    }

    .send:hover {
      background: darkorange;
    }

    .send:focus {
      border: 1px solid #bd46a9;
    }
  </style>
  <title>D3 Test</title>
</head>

<body>
  <form action="">
    <h1>Covid-19 c√°lculo CRF</h1>
    <input type="text" id="table" name="table" placeholder="Digite o dia ..." class="inputnumber" />
    <input value="Enviar" class="send" onClick="getContent()" />
  </form>

  <div id="result"></div>
  <script>
    function showResult(result, index) {
      let resultElement = document.createElement('h1')
      resultElement.textContent = 'Dia: '+ (index + 1) + "  -   " + result + ' media de letalidade'
      resultElement.className = 'resultText'

      let resultDiv = document.getElementById('result')

      resultDiv.appendChild(resultElement)
      resultDiv.innerHTML += "<br>" 
    }

    function hideResult() {
      try {
        let result = document.querySelector('.resultText')

        result.parentNode.removeChild(result)
      } catch (error) {

      }
    }

    async function handleApiResult(day) {
      try {
        const response = await fetch("http://localhost:5000/ddf/" + day, { method: 'GET' })
       .then(response => response.json())
       .then(response => { 
        console.log(response)
       //let value = JSON.stringify(response);
      //let array = value.replace('[').split(',')
         //showResult(response)
         response.forEach( (item,index)  => showResult(item || '0', index));
         
       });
       // const responseData = await response.json()

      } catch (error) {
        console.error(error)
      }
    }

    function getContent() {
      hideResult()

      const daySelected = document.querySelector('.inputnumber').value

      const regexDigits = /\d/

      const isOnlyDigits = regexDigits.test(daySelected)

      if (isOnlyDigits) {
        handleApiResult(daySelected)
      }
    }

  </script>
</body>

</html>